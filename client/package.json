{
	"name": "perl6-lsp",
	"displayName": "Perl 6 language support",
	"description": "Shows Perl 6 errors as you type",
	"author": "scriplit",
	"license": "MIT",
	"version": "0.2.5",
	"publisher": "scriplit",
	"repository": {
		"type": "git",
		"url": "https://github.com/scriplit/vscode-languageserver-perl6"
	},
	"engines": {
		"vscode": "^1.19.1"
	},
    "icon": "Camelia-128px-SQUARE.png",
    "categories": [
        "Languages",
        "Linters"
    ],
    "keywords": [
        "rakudo",
        "perl6",
        "6lang",
        "perl",
        "six"
    ],
	"activationEvents": [
		"onLanguage:perl6"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"perl6.path": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "Path to the perl6 executable, if not in PATH"
				},
				"perl6.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VSCode and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode": "^1.1.5",
		"vscode-languageclient": "^3.4.2"
	}
}
